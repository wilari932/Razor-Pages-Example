
@model RazorPagesExample.Web.Dto.NoteDto
@{
    Layout = null;
}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label for="nombre-input">Nombre</label>
        <input asp-for="Name" class="form-control" id="nombre-input" placeholder="Nombre">
        <small id="note-help" class="form-text text-muted">Aqui escribes tu nombre </small>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="description-input">Description</label>
        <textarea asp-for="Description" class="form-control" id="description-input" placeholder="Description" rows="4" cols="50"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    @Html.HiddenFor(x => x.Id)
    <button type="submit" class="btn btn-primary">Submit</button>
</form>